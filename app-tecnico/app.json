{
  "expo": {
    "name": "App do Técnico",
    "slug": "app-tecnico",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e40af"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.echoshop.apptecnico",
      "buildNumber": "1",
      "infoPlist": {
        "NSCameraUsageDescription": "O app precisa de acesso à câmera para tirar fotos das ordens de serviço",
        "NSLocationWhenInUseUsageDescription": "O app precisa de acesso à localização para registrar onde a OS foi executada",
        "NSPhotoLibraryUsageDescription": "O app precisa de acesso às fotos para anexar imagens às ordens de serviço"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1e40af"
      },
      "package": "com.echoshop.apptecnico",
      "versionCode": 1,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir que o App do Técnico acesse sua câmera para fotos das OS"
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Permitir que o App do Técnico acesse sua localização"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "app-tecnico-echoshop"
      }
    },
    "owner": "echoshop",
    "updates": {
      "fallbackToCacheTimeout": 0,
      "url": "https://u.expo.dev/app-tecnico-echoshop"
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    }
  }
}
